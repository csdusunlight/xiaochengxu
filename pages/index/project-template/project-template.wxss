.project {
  display: flex;
  flex-direction: column;
  margin-bottom: 10px;
  background-color: #fff;
  position: relative;
}

.project:active {
  background-color: #f0f0f0;
}

.project__state {
  position: absolute;
  right: 20rpx;
  top: 0;
  width: 90rpx;
  height: auto;
}

.top-box {
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #e5e5e5;
}

