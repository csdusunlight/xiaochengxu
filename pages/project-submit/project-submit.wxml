<view wx:if='{{itemShow[5]}}' class='submit-item-box'>
  <text class='submit-item-txt'>提交手机号<text class='submit-item-mark'>*</text></text>
  <input bindblur='formTest' data-type='phone' data-key='5' class='submit-item pass-{{itemClass[5]}}' placeholder='请输入提交手机号'></input>
  <text class='submit-item-tips' wx:if='{{itemClass[5] == "no"}}'>您输入的手机号码不正确</text>
</view>
<view wx:if='{{itemShow[0]}}' class='submit-item-box'>
  <text class='submit-item-txt'>投资姓名/用户名<text class='submit-item-mark'>*</text></text>
  <input bindblur='formTest' data-type='name' data-key='0' class='submit-item pass-{{itemClass[0]}}' placeholder='请输入备注信息'></input>
  <text class='submit-item-tips' wx:if='{{itemClass[0] == "no"}}'>必须为纯汉字，且不能为空</text>
</view>
<view wx:if='{{itemShow[1]}}' class='submit-item-box'>
  <text class='submit-item-txt'>投资金额<text class='submit-item-mark'>*</text></text>
  <input bindblur='formTest' type='number' data-type='num' data-key='1' class='submit-item pass-{{itemClass[1]}}' placeholder='请输入提交手机号'></input>
  <text class='submit-item-tips' wx:if='{{itemClass[1] == "no"}}'>必须为纯数字，且不能为空</text>
</view>
<view wx:if='{{itemShow[2]}}' class='submit-item-box'>
  <text class='submit-item-txt'>投资标期<text class='submit-item-mark'>*</text></text>
  <input bindblur='formTest' type='number' data-type='num' data-key='2' class='submit-item pass-{{itemClass[2]}}' placeholder='请输入提交手机号'></input>
  <text class='submit-item-tips' wx:if='{{itemClass[2] == "no"}}'>必须为纯数字，且不能为空</text>
</view>
<view wx:if='{{itemShow[3]}}' class='submit-item-box'>
  <text class='submit-item-txt'>投资日期</text>
  <picker mode='date' start="2017-09-01" end="2019-09-01" bindchange='pickerTest' data-type='date' data-key='3' class='submit-item pass-{{itemClass[3]}}'>
  <view class="weui-input">{{date}}</view>
  </picker>
  <text class='submit-item-tips' wx:if='{{itemClass[3] == "no"}}'>不能为空</text>
</view>
<view wx:if='{{itemShow[4]}}' class='submit-item-box {{itemClass}}'>
  <text class='submit-item-txt'>收款信息</text>
  <input bindblur='formTest' data-type='need' data-key='4' class='submit-item pass-{{itemClass[4]}}' placeholder='请输入备注信息'></input>
  <text class='submit-item-tips' wx:if='{{itemClass[4] == "no"}}'>不能为空</text>
</view>
<view wx:if='{{itemShow[6]}}' class='submit-item-box'>
  <text class='submit-item-txt'>返现金额</text>
  <input bindblur='formTest' data-type='need' data-key='6' class='submit-item pass-{{itemClass[6]}}' placeholder='请输入备注信息'></input>
  <text class='submit-item-tips' wx:if='{{itemClass[6] == "no"}}'>不能为空</text>
</view>
<view wx:if='{{itemShow[7]}}' class='submit-item-box'>
  <text class='submit-item-txt'>QQ</text>
  <input bindblur='formTest' data-type='qq' data-key='7' class='submit-item  pass-{{itemClass[7]}}' placeholder='请输入qq号码'></input>
  <text class='submit-item-tips' wx:if='{{itemClass[7] == "no"}}'>您输入的qq号码不正确</text>
</view>
<view wx:if='{{itemShow[8]}}' class='submit-item-box'>
  <text class='submit-item-txt'>投资截图</text>
  <input bindblur='formTest' class='submit-item pass-{{itemClass[8]}}' data-key='8' placeholder='请输入备注信息'></input>
</view>
<view class='submit-item-box'>
  <text class='submit-item-txt'>备注</text>
  <input class='submit-item' placeholder='请输入备注信息,选填'></input>
</view>