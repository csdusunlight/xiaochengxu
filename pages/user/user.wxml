<!--pages/user/user.wxml-->
<view class='wrapper'>
  <view class='topBox'>
    <view class='headPic'>
      <image src="{{avatarUrl}}"></image>
    </view>
    <text class='userName'>{{nickName}}</text>
  </view>

  <view class='list'>
    <view class='listBox' bindtap='tapOlder'>
      <view class='go'>
        <text>交单记录</text>
        <image class='pic' src="/image/r-icon.png" />
      </view>
    </view>
    <view class='listBox' bindtap='tapMsg'>
      <view class='go'>
        <text>消息中心</text>
        <image class='pic' src="/image/r-icon.png" />
      </view>
    </view>
    <view class='listBox' bindtap='notice'>
      <view class='go msg'>
        <text>通知公告</text>
        <image class='pic' src="/image/r-icon.png" />
      </view>
    </view>
  </view>
  <view class='list'>
    <view class='listBox' bindtap='bindUser'>
      <view class='go'>
        <text>账号绑定</text>
        <image class='pic' src="/image/r-icon.png" />
      </view>
    </view>
    <view class='listBox' bindtap='service'>
      <view class='go'>
        <text>联系客服</text>
        <!-- <image class='pic' src="/image/r-icon.png" /> -->
        <contact-button class='cBtn' type="default-dark" size="20" session-from="weapp"></contact-button>
      </view>
    </view>
  </view>
  
</view>